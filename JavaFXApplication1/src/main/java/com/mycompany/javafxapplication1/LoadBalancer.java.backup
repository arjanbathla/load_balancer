import java.util.List;
import java.util.concurrent.atomic.AtomicInteger;

class LoadBalancer {
    private final List<String> storageContainers;
    private final AtomicInteger currentIndex;

    public LoadBalancer(List<String> storageContainers) {
        this.storageContainers = storageContainers;
        this.currentIndex = new AtomicInteger(0);
    }

    public String getNextStorageContainer() {
        int index = currentIndex.getAndUpdate(i -> (i + 1) % storageContainers.size());
        return storageContainers.get(index);
    }
}



